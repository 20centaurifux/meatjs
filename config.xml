<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.meatjs" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>meatjs</name>
    <description>
        An online image library with shared meta data.
    </description>
    <author email="sebastian.fedrau@gmail.com" href="https://github.com/20centaurifux/meatjs/">
        Sebastian Fedrau
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/android/icon-ldpi.png" />
        <icon density="mdpi" src="res/android/icon-mdpi.png" />
        <icon density="hdpi" src="res/android/icon-hdpi.png" />
        <icon density="xhdpi" src="res/android/icon-xhdpi.png" />
        <splash density="port-hdpi" src="res/android/port-splash-hdpi.png" width="480" height="800" />
        <splash density="port-ldpi" src="res/android/port-splash-ldpi.png" width="200" height="320" />
        <splash density="port-mdpi" src="res/android/port-splash-mdpi.png" width="480" height="320" />
        <splash density="port-xhdpi" src="res/android/port-splash-xhdpi.png" width="720" height="1280" />
        <splash density="land-hdpi" src="res/android/land-splash-hdpi.png" width="800" height="480" />
        <splash density="land-ldpi" src="res/android/land-splash-ldpi.png" width="320" height="200" />
        <splash density="land-mdpi" src="res/android/land-splash-mdpi.png" width="320" height="480" />
        <splash density="land-xhdpi" src="res/android/land-splash-xhdpi.png" width="1280" height="720" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="2000" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.1" />
    <plugin name="cordova-plugin-camera" spec="~2.2.0" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="https://github.com/katzer/cordova-plugin-local-notifications.git" />
    <plugin name="cordova-plugin-background-mode" spec="https://github.com/katzer/cordova-plugin-background-mode.git" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />
</widget>
